package day2;

public class BookStore {
  int SIZE;
  String BookStoreName;
  Book[] books;
  BookStore(String BookStoreName,int size){
	  this.BookStoreName=BookStoreName;
	  SIZE=size;
	this.books=Book[SIZE];
	  init();
  }
private void init() {
	// TODO Auto-generated method stub
	books[0]=new Book("THE STORY OF MY EXPERIMENTS WITH TRUTH ","M.K.GANDHI","548755A5",10);
	books[1]=new Book("MY DAYS: A MEMOIR ","R.K.NARAYAN","548855A5",56);
	books[2]=new Book("WINGS OF FIRE ","A.P.J.ABDULKALAM","548955A5",100);
	books[3]=new Book("THE ACCIDENTAL PRIME MINISTER ","SANJAYA BARU","549055A5",79);
	books[4]=new Book("VEERAPPAN: CHASING THE BRIGAND","K. VIJAY KUMAR","549155A5",68);	
}
public void sell(String bookTitle,int noOfCopies) {
	 boolean check=false;
	 for(int i=0;i<SIZE;i++) {
		 if(books[i].getBookTitle().equals(bookTitle)) {
			 books[i][3]=(books[i][3]-noOfCopies);
			 check=true;
		 }
	 }
	 if(check) {
		 System.out.println("Hurray! sale of book is success");
	 }
	 else {
		 System.out.println("sorry!book is unavailable in store");
	 }
}

