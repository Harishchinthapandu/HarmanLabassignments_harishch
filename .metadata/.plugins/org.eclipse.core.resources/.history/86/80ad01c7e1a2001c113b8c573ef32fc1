package day2;

public class Book {
	public String bookTitle;
	public String author;
	public String ISBN;
	public int noofcopies;
	public String getBookTitle() {
		return bookTitle;
	}
	Book(String bookTitle, String author, String ISBN, int noofcopies){
		this.bookTitle=bookTitle;
		this.author=author;
		this.ISBN=ISBN;
		this.noofcopies=noofcopies;
	
	}
	public String display() {
		// TODO Auto-generated method stub
		return "Book[TITLE: "+bookTitle+" AUTHOR: "+author+" ISBN: "+ISBN+" QUANTITY: "+noofcopies+"]";
	
	}
	public static void main(String args[]) {
		Book b = new Book("THE STORY OF MY EXPERIMENTS WITH TRUTH ","M.K.GANDHI","548755A5",10);
		System.out.println(b.display());
		
	}
	
	
	

}

